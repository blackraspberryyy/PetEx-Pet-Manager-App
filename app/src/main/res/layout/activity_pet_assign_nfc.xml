<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASSIGN PETEX TAG"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/flat_gray"
        android:textColor="@color/flat_greenDark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        >

        <com.beardedhen.androidbootstrap.BootstrapThumbnail
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:bootstrapBrand="success"
            app:hasBorder="true"
            android:id="@+id/assign_nfc_image"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:bootstrapBrand="success"
            app:fontAwesomeIcon="fa_arrow_right"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img_contDesc"
            android:src="@drawable/petex_tag" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/assign_nfc_header"
        android:gravity="center"
        android:textAlignment="center"
        />
    <!--
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        app:roundedCorners="true"
        app:bootstrapBrand="success"
        app:showOutline="true"
        android:text="Start Scanning"
        android:id="@+id/start_scanning_button"
        />
    -->
    <com.beardedhen.androidbootstrap.BootstrapWell
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        app:bootstrapSize="xl"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tap an NFC card"
            />
    </com.beardedhen.androidbootstrap.BootstrapWell>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please make sure that NFC is enabled."
        android:textSize = "15sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>
</LinearLayout>