<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NavigationActivity"
    tools:showIn="@layout/app_bar_navigation"
    android:orientation="vertical"
    android:layout_gravity="center">

    <!--Your Elements Here-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCAN PETEX TAG"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/flat_gray"
        android:textColor="@color/flat_greenDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tap the PetEx Tag"
        android:layout_marginTop = "40dp"
        android:textColor="@color/flat_black"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img_contDesc"
            android:src="@drawable/ic_phonelink_ring_black_24dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:contentDescription="@string/img_contDesc"
            android:src="@drawable/petex_tag" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:text="Start Scanning"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@color/flat_green"
        android:textColor="@color/flat_white"
        android:onClick="startScanning"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please make sure that NFC is enabled."
        android:textSize = "15sp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"/>

</LinearLayout>
